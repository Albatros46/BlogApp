@using BlogApp.ViewModels
@model LoginViewModel



<div class="row">
    <div class="col-12">
        <h1>Login</h1>
    </div>
    <form class="mt-3" action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"><!--Model seviyesindeki hatalari gosterecek.-->

        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input type="email" asp-for="Email" name="Email" id="Email" class="form-control" placeholder="E-Mail" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input type="password" asp-for="Password" name="Password" id="Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <button class="btn btn-primary" type="submit">Login</button>
    </form>
</div>