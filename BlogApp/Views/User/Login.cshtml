@using BlogApp.ViewModels
@model LoginViewModel



<div class="row">
    <div class="col-12">
        <h1>Login</h1>
    </div>
    <div class="bg-white p-4">
        <form class="mt-3" action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger">
                <!--ModelOnly:Model seviyesindeki hatalari gosterecek.All bütün hatalari yazar-->

            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" asp-for="Email" name="Email" id="Email" class="form-control" placeholder="E-Mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input type="password" asp-for="Password" name="Password" id="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </form>
    </div>

</div>