@using BlogApp.Entities

@model User
<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-2">
             <img src="~/img/@Model.Image" class="img-fluid" alt="" />
        </div>
    </div>
      <div class="col-md-10">
      <div class="bg-white p-2">
          <h5>@Model.Name</h5>
          <hr />
          <div id="posts">
              <h5 class="my-5">Yayinlanan Gönderiler</h5>
              <ul class="list-group">
                  @foreach(var post in @Model.Posts)
                  {
                      <li class="list-group-item"><i class="bi bi-caret-right-fill"></i> <a href="/post/details/@post.Url">@post.Title</a> </li>
                  }
              </ul>
          </div>
          <hr />
          <div class="comments">
              <h5 class="my-5">Yorumlar</h5>
              <ul class="list-group">
                @foreach(var comment in @Model.Comments)
                {
                     <li class="list-group-item"><i class="bi bi-chat-right-dots-fill"></i> @comment.Text </li>
                }
            </ul>
          </div>
      </div>
  </div>
</div>
