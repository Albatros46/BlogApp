@model BlogApp.ViewModels.PostsViewModel
<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">Populer Posts</h1>
            @foreach (var post in Model.Posts)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/img/@post.Image" class="img-fluid rounded" alt="" />
                        </div>
                        <div class="col-8">
                            <h5><a href="/posts/@post.Url" class="btn-link fw-bold">@post.Title</a></h5>
                            <p>@post.Content</p>
                            <a href="#" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Web Developer</a>
                        </div>
                    </div>
                </div>
                <hr class="my-3" />
            }
            <nav>
                <ul class="pagination">
                    <li class="page-item">
                        <a href="#" class="page-link">1</a>
                    </li>
                    <li class="page-item">
                        <a href="#" class="page-link">2</a>
                    </li>
                    <li class="page-item">
                        <a href="#" class="page-link">3</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-lg-4">
       <!--ViewComponents den veri kullanma islemi -->
       @*  <vc:[tags-menu]></vc:[tags-menu]> *@<!--1.Yöntem TagHelpers TagsMenu componenti icin vc:tags-menu yazarak -->
        @await Component.InvokeAsync("TagsMenu") 
        @await Component.InvokeAsync("NewPosts")
    </div>
</div>


